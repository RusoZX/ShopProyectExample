<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shoppingListTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="@string/shoppingListTv"
        android:textColor="#FFC107"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shoppinRecyView"
        android:layout_width="409dp"
        android:layout_height="500dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/shoppingListTv"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:id="@+id/srchShopListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="510dp"
        android:text="@string/searchShopListBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoppingListTv" />

    <Button
        android:id="@+id/buyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="@string/buyBtn"
        app:layout_constraintBottom_toBottomOf="@+id/srchShopListBtn"
        app:layout_constraintStart_toEndOf="@+id/srchShopListBtn"
        app:layout_constraintTop_toTopOf="@+id/srchShopListBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>